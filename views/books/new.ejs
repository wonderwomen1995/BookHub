<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Book</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/books" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[writer]" placeholder="Book's Author" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[edition]" placeholder="Edition" required>
                </div>
                <div class="form-group"><input class="form-control" type="number" placeholder="price" name="book[price]" min="10" step="10" required></div>
                 <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="book[image]" accept="image/*" multiple required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="8" name="book[description]" placeholder="description" required></textarea>
                </div>
                <p>Your Contact details</p>
                <div class="form-group">
                    <input class="form-control" type="tel" name="book[contact]" placeholder="Contact Number" minlength="10" maxlength="10"   required>
                        
                </div>
                
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
    </div>
<% include ../partials/footer %>

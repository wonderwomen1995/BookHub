<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%=book.name%></h1>
        <div style="width:30%;margin:20px auto;">
                <form action="/books/<%=book._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
         <div class="form-group"><input class="form-control" type="text" value="<%=book.name%>" name="book[name]"></div>
         <div class="form-group"><input class="form-control" type="text" value="<%=book.writer%>" name="book[writer]"></div>
         <div class="form-group"><input class="form-control" type="text" value="<%=book.edition%>" name="book[edition]"></div>
         <div class="form-group"><input class="form-control" type="number" value="<%=book.price%>"  name="book[price]" min="10" step="10"></div>
       <div class="form-group"><input class="form-control" type="text" value="<%=book.description%>" name="book[description]"></div>
       <div class="form-group">
                    <input class="form-control" type="tel" name="book[contact]" placeholder="Contact Number" value="<%=book.contact%>" minlength="10" maxlength="10"   required>
                        
                </div>
        <div class="form-group"><button class="btn btn-primary btn-block">Update</button></div>
        </form>
        <a href="/books/<%=book._id%>" class="btn btn-primary">GO BACK</a>
        </div>
    </div>
</div>

